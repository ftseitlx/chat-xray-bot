# Simple Ollama image with pre-installed llama2 model
FROM ollama/ollama:latest

# Set environment variables for serving
ENV OLLAMA_HOST=0.0.0.0
ENV OLLAMA_ORIGINS=*

# Install model during build
COPY --chmod=755 ./install-model.sh /install-model.sh
RUN /install-model.sh

# Expose port
EXPOSE 11434

# Simple startup - just run the server
CMD ["ollama", "serve"] 